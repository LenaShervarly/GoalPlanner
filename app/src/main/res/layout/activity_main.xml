<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shervarly.lena.goalplanner.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_primary"
        app:layout_constraintBottom_toTopOf="@+id/textView2" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">


        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            tools:layout_editor_absoluteX="16dp">

            <Button
                android:id="@+id/goalsFor10Years"
                android:layout_width="150dp"
                android:layout_height="140dp"
                android:layout_below="@+id/textView2"
                android:background="@drawable/yellow_hexagon"
                android:elevation="8dp"
                android:fontFamily="@font/volkhov"
                android:onClick="checkPage"
                android:text="@string/_10_years"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="24sp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/goalsFor3Years"
                android:layout_width="150dp"
                android:layout_height="140dp"
                android:background="@drawable/yellow_hexagon"
                android:elevation="8dp"
                android:fontFamily="@font/volkhov"
                android:onClick="checkPage"
                android:text="@string/_3_years"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="24sp"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            tools:layout_editor_absoluteX="16dp">

            <Button
                android:id="@+id/goalsFor12Weeks"
                android:layout_width="150dp"
                android:layout_height="140dp"
                android:layout_below="@+id/textView2"
                android:background="@drawable/yellow_hexagon_upsidedown"
                android:elevation="8dp"
                android:fontFamily="@font/volkhov"
                android:onClick="checkPage"
                android:text="@string/_12_weeks"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="24sp"
                android:textStyle="italic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <Button
                android:id="@+id/goalsFor1Week"
                android:layout_width="150dp"
                android:layout_height="140dp"
                android:layout_alignBaseline="@+id/goalsFor10Years"
                android:layout_alignBottom="@+id/goalsFor10Years"
                android:layout_toEndOf="@+id/goalsFor10Years"
                android:layout_toRightOf="@+id/goalsFor10Years"
                android:background="@drawable/yellow_hexagon_upsidedown"
                android:elevation="8dp"
                android:fontFamily="@font/volkhov"
                android:onClick="checkPage"
                android:text="@string/_1_week"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="24sp"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/goalsFor10Years"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
